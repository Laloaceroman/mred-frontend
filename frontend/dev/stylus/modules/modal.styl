
.modal
	cover(fixed)
	z-index $z-index-modal
	display none

	&.modal--in
		display table
		animation fadeIn .5s ease
		.modal__box
			animation scaleFadeIn .5s .2s ease backwards

	&.modal--out
		display table
		animation fadeOut .2s ease both
		.modal__box
			animation scaleFadeOut .2s ease both
	

	&.modal--video
		.modal__box
			max-width 800px

	.modal__back
		cover(fixed)
		background rgba(0,0,0,.7)

	.modal__front
		position relative
		height 100%
		display table-cell
		text-align center
		vertical-align middle
	
	.modal__icon
		margin-bottom 20px
		img
			width 80px
	
	.modal__form
		margin-top 20px

	.modal__box
		padding 30px
		background-color $dark
		color white
		max-width 600px
		margin 0 auto
		position relative

	.modal__content

		.modal__title
			margin-bottom 10px

		.modal__message
			&:last-child
				margin-bottom 0

	.modal__close
		position absolute
		top 0
		right 0
		padding 10px 15px
		color white
		&:hover
			cursor pointer

	&.modal--register

		.modal__front
			position absolute
			top 40px
			left 0
			width 100%
			height 100%
			overflow auto
			@media $break-md
				padding 80px 0px
			.modal__box
				overflow auto
				height auto

		.modal__box
			position relative
			min-height auto
			text-align center
			z-index 2
			margin 0 auto
			overflow-y scroll
