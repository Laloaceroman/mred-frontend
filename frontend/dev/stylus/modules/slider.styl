
.slider
	position relative
	//animation fadeIn 2s
	overflow hidden

	.slider-slides
		position relative
		overflow hidden

	.slide
		position relative
		overflow hidden
		display none
		&.slide-current
			display block
			z-index 1
		&.slide-out
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			display block
			z-index 2


	.slider-bullets
		position absolute
		bottom 10px
		z-index 3
		width 100%
		text-align center

		.slider-bullets-limit
			max-width $limit
			margin 0 auto
			padding 0 20px
			@media $break-md
				padding 0 40px

		.slider-bullet
			width 10px
			height 10px
			border-radius 50%
			background white
			display inline-block
			margin 0 5px
			transition .2s ease
			opacity .25
			&.slider-bullet-current
				opacity .75
			&:hover
				cursor pointer


	.slider-navigation
		.slider-nav
			position absolute
			top 50%
			background rgba(black,.2)
			color white
			opacity .9
			z-index 3
			width 40px
			height 80px
			margin-top (@height / -2)
			line-height @height
			border 0
			text-align center
			font-size 150%
			//display none
			transition .2s ease
			@media $break-md
				font-size 200%
				display block
			&.slider-nav-left
				left 0
				padding-left 0
				z-index 50
				@media $break-md
					left 10px
			&.slider-nav-right
				right 0
				padding-right 0
				z-index 50
				@media $break-md
					right 10px

			&:hover
				cursor pointer
				opacity 1
				background $color_primary



	&.slider-dir-left
	&.slider-dir-right
		.slide
			&.slide-current
				animation fadeIn .5s $cb
			&.slide-out
				animation fadeOut .5s $cb both

	&.slider--cover
		cover(absolute)
		.slider-slides
			cover(absolute)
		.slide
			cover(absolute)


