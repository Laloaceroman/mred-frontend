
header
	height $header-height + 40
	line-height $header-height
	position fixed
	top 0
	left 0
	width 100%
	z-index $z-index-header + 50
	color $dark
	background-color white
	transition .5s
	a
		color $dark

	.header__primary
		position relative
		z-index $z-index-header
		transition .25s ease

	.header__secondary 
		background-color $color_secondary
		color white
		position relative
		z-index $z-index-header
		height 40px
		line-height 40px
		transition .25s ease
		.header__infos
			display flex
			justify-content center
			align-items center
			.header__info
				font-size 12px
				line-height 16px
				margin-bottom 0
				font-weight 500
				&:first-child
					margin-right 20px
				span
					font-weight 300

		.header__wrap
			position relative
			max-width $limit
			margin 0 auto
			height 100%
			display flex
			align-items center
			justify-content center

	.header__wrap
		position relative
		max-width $limit
		margin 0 auto
		height 100%
		
	.header__search
		position absolute
		top 0
		left 0
		width 100%
		background $white
		z-index 50
		display none
		.fa
			position absolute
			top 50%
			margin-top -8px
			left 20px
			color black
			font-size $global-size
			opacity .5
		input
			background transparent
			color $dark
			border 0
			placeholder rgba(0,0,0,.5)
			line-height $header-height
			padding 0 30px 0 50px

	&.header--search-in
		.header__search
			display block
			animation slideDown .4s $cb

	&.header--search-out
		.header__search
			animation slideUpOut .4s $cb both

	.header__inner
		position relative
		height 100%

	.header__logo
		position relative
		margin-left 20px
		display inline-block
		transition .5s
		img
			vertical-align middle
			display inline-block
			width 120px
			transition .5s

	.header__nav
		display none
		z-index 1
		.header__nav__back
		.header__nav__close
			position relative
			width 55px
			height 50px
			z-index 3
			display none
			div
				height 2px
				background $dark
				width 25px
				position absolute
				top 50%
				left 50%
				margin-top -1px
				border-radius 2px
				margin-left (@width / -2)
		
		.header__button
			text-align center
				
		.header__nav__close
			right 0	
			div
				transform rotate(45deg)
				&:last-child
					transform rotate(135deg)	

		.header__nav__back
			left 0
			animation slideFadeLeft .5s ease
			div
				&:first-child
					transform-origin left top
					transform rotate(45deg)
					width 10px
				&:last-child
					transform-origin left bottom
					transform rotate(-45deg)
					width 10px
		
		.header__socials
			text-align center
			.header__item
				display inline-block
	
	.header__ham
		position relative
		background-color transparent
		width 35px
		height 30px
		display inline-block
		vertical-align middle
		border-radius $rad
		height @width
		text-align center
		height 25px
		line-height 30px
		margin-right 10px
		span
			display block
			height 3px
			margin 0 auto 5px
			background $dark
			width 30px
			transition .2s ease

	.header__right
		position relative
		float right
		.header__item
			float right
			padding 0 10px
			min-width 40px
			font-size 18px
			cursor pointer
			display none
			&.header__item--ham
				display block
			
			&.header__item--mobile
				display inline-block

			&.header__item--search--mobile
				display block
				float left
				.fa
					font-size 18px
					color white


	@media $break-limit-i

		.header__nav
			display none
			line-height $global-lh
			cover(fixed)
			text-align left

			.header__nav__nav
				position absolute
				top 0
				right 0
				width 100%
				height 100%
				background white
				color $dark
				animation fadeIn .5s ease
				ul
					padding 40px 0
					text-align center
					li
						border-bottom 1px solid $light
						a
							color $dark
							font-weight 300
							padding 20px 10px
							display block
							font-size $global-size-lg
							.fa
								float right
								opacity .5
							
						ul
							position absolute
							top 0
							left 0
							width 100%
							height 100%
							background white
							display none
							box-shadow $shadow
							z-index 2
							&.ul--in
								display block
								animation slideLeft .5s ease
							&.ul--out
								display block
								animation slideRightOut .5s ease both
				
				.header__nav__bar
					width 100%
					box-shadow $shadow
					height $header-height
					display flex
					align-items center
					justify-content space-between


			.header__nav__bg
				animation fadeIn .5s ease
				cover(absolute)
				background $dark
				opacity .5
				tap 0

			.header__nav__close
				display block

			&.header__nav--ul-in
				.header__nav__back
					display block


		&.header--nav-in
			.header__nav
				display block

		&.header--nav-out
			.header__nav
				display block
				.header__nav__bg
					animation fadeOut .5s ease both
				.header__nav__nav
					animation fadeOut .5s ease both

@media $break-md
	header
		height 160px
		line-height 160px
		background-color white
		.header__wrap
			padding 0 20px
		
		.header__inner
			display flex
			flex-direction column
			align-items center
			justify-content center
			height 120px
			line-height 120px

		.header__logo
			margin-left initial
			line-height initial
			background-color white
			margin-bottom 20px
			img
				width 150px
				line-height initial

		.header__search
			position absolute
			top 19px
			left initial
			right 0
			width 100%
			z-index 50
			display none
			.fa
				position absolute
				top 50%
				margin-top -8px
				left 20px
				font-size $global-size
				opacity .5
			input
				background transparent
				border-left 1px solid $light
				border-right 1px solid $light
				placeholder rgba(0,0,0,.5)
				line-height $header-height
				padding 0 30px 0 50px

			
		.header__right
			float right
			.header__item
				display block

		.header__ham
			margin-right -20px
			float right
		

		.header__nav
			transition ease-in-out all .0s
			//margin-left 20px
			.header__nav-close
				display none
			.header__nav__back
				display none	
			.header__socials
				display none
			.header__nav__bar
				display none
			ul
				padding-top 0
				text-align right
				li
					a
						&:hover
							text-decoration underline
			
			.header__button
				display none



@media $break-limit

	header

		.header__ham
			display none

		.header__nav
			display inline-block
			line-height initial
			border-top 1px solid rgba(0,0,0,.1)
			padding-top 10px
			ul
				li
					display inline-block
					position relative
					transition .5s
					&.current-menu-item
						a
							font-weight bold
					&.header__nav__li
						&:hover
							.header__nav__li__blocked
								display block

					a
						letter-spacing 0.5px
						position relative
						padding 10px 15px
						font-size 16px
						line-height 24px
						letter-spacing 1px
						font-weight 400
						transition .5s
						color $dark
						.fa
							margin-left 5px
					
					&:after
						content ""
						position absolute
						bottom 0
						left 0
						width 0
						height 5px
						background-color white


					&.current
						a
							font-weight bold
						&:after
							height 4%
	
