
// Fade

@keyframes fadeIn
	0%
		opacity 0

@keyframes fadeOut
	100%
		opacity 0



// Slide Up

@keyframes slideUp
	0%
		transform translateY(100%)

@keyframes slideFadeUp
	0%
		transform translateY(20px)
		opacity 0
@keyframes slideUpOut
	100%
		transform translateY(-100%)



// Slide Down

@keyframes slideDown
	0%
		transform translateY(-100%)
@keyframes slideFadeDown
	0%
		transform translateY(-20px)
		opacity 0
@keyframes slideDownOut
	100%
		transform translateY(100%)



// Slide Left

@keyframes slideLeft
	0%
		transform translateX(100%)
@keyframes slideFadeLeft
	0%
		transform translateX(20px)
		opacity 0
@keyframes slideLeftOut
	100%
		transform translateX(-100%)



// Slide Right

@keyframes slideRight
	0%
		transform translateX(-100%)

@keyframes slideFadeRight
	0%
		transform translateX(-20px)
		opacity 0

@keyframes slideRightOut
	100%
		transform translateX(100%)




// Scale

@keyframes scaleIn
	0%
		transform scale(0)

@keyframes scaleFadeIn
	0%
		transform scale(1.2)

@keyframes scaleOut
	100%
		transform scale(0)

@keyframes scaleFadeOut
	100%
		transform scale(.8)
		opacity 0


@keyframes translateBg
	0%
		transform translateY(-10%)



@keyframes heightMd
	0%
		max-height 0
		overflow hidden
	100%
		max-height 500px
		overflow hidden

@keyframes bgIn
	0%
		transform translateY(-10%)
		

